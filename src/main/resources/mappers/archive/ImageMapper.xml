<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phantoms.phantomsbackend.mapper.ImageMapper">

    <!-- 插入图片 -->
    <insert id="insert" parameterType="com.phantoms.phantomsbackend.pojo.model.ImageModel">
        INSERT INTO images (
        id,
        name,
        data,
        created_at,
        uploaded_by
        ) VALUES (
        #{id},
        #{name},
        #{data},
        #{createdAt},
        #{uploadedBy}
        )
    </insert>

    <!-- 根据ID查询图片 -->
    <select id="selectById" parameterType="java.util.UUID" resultType="com.phantoms.phantomsbackend.pojo.model.ImageModel">
        SELECT * FROM images WHERE id = #{id}
    </select>

    <!-- 更新图片 -->
    <update id="updateById" parameterType="com.phantoms.phantomsbackend.pojo.model.ImageModel">
        UPDATE images
        SET
        name = #{name},
        data = #{data},
        uploaded_by = #{uploadedBy}
        WHERE id = #{id}
    </update>

    <!-- 删除图片 -->
    <delete id="deleteById" parameterType="java.util.UUID">
        DELETE FROM images WHERE id = #{id}
    </delete>

</mapper>