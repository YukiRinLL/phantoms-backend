<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phantoms.phantomsbackend.mapper.UserProfileMapper">

    <!-- 插入用户资料 -->
    <insert id="insert" parameterType="com.phantoms.phantomsbackend.pojo.model.UserProfileModel">
        INSERT INTO user_profile (
        id,
        legacy_user_id,
        user_id,
        name,
        data,
        created_at,
        uploaded_by
        ) VALUES (
        #{id},
        #{legacyUserId},
        #{userId},
        #{name},
        #{data},
        #{createdAt},
        #{uploadedBy}
        )
    </insert>

    <!-- 根据ID查询用户资料 -->
    <select id="selectById" parameterType="java.util.UUID" resultType="com.phantoms.phantomsbackend.pojo.model.UserProfileModel">
        SELECT * FROM user_profile WHERE id = #{id}
    </select>

    <!-- 更新用户资料 -->
    <update id="updateById" parameterType="com.phantoms.phantomsbackend.pojo.model.UserProfileModel">
        UPDATE user_profile
        SET
        legacy_user_id = #{legacyUserId},
        user_id = #{userId},
        name = #{name},
        data = #{data},
        uploaded_by = #{uploadedBy}
        WHERE id = #{id}
    </update>

    <!-- 删除用户资料 -->
    <delete id="deleteById" parameterType="java.util.UUID">
        DELETE FROM user_profile WHERE id = #{id}
    </delete>

</mapper>