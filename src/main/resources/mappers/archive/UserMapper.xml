<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phantoms.phantomsbackend.mapper.UserMapper">

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.phantoms.phantomsbackend.pojo.model.UserModel">
        INSERT INTO users (
        id,
        username,
        password,
        email,
        user_id
        ) VALUES (
        #{id},
        #{username},
        #{password},
        #{email},
        #{userId}
        )
    </insert>

    <!-- 根据ID查询用户 -->
    <select id="selectById" parameterType="java.util.UUID" resultType="com.phantoms.phantomsbackend.pojo.model.UserModel">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <!-- 更新用户 -->
    <update id="updateById" parameterType="com.phantoms.phantomsbackend.pojo.model.UserModel">
        UPDATE users
        SET
        username = #{username},
        password = #{password},
        email = #{email},
        user_id = #{userId}
        WHERE id = #{id}
    </update>

    <!-- 删除用户 -->
    <delete id="deleteById" parameterType="java.util.UUID">
        DELETE FROM users WHERE id = #{id}
    </delete>

</mapper>